# Development-focused Frontend Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies for development)
RUN npm install

# Copy source code
COPY . .

# Build the application
RUN npm run build
    
# Use simple serve to host the built files
RUN npm install -g serve

EXPOSE 3000

# Serve the built application
CMD ["serve", "-s", "dist", "-l", "3000"]